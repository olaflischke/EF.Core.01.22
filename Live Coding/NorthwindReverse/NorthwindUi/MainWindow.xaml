<Window x:Class="NorthwindUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthwindUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TreeView x:Name="trvCustomers" Grid.Column="0" Grid.Row="0" />

        <GridSplitter Width="5" HorizontalAlignment="Center" Grid.Column="1"/>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ComboBox x:Name="cbxOrders" Grid.Row="0" Width="200" Height="23" SelectionChanged="cbxOrders_SelectionChanged" />

            <DataGrid x:Name="dgOrderInfo" Grid.Row="1" />

            <TextBox x:Name="txtLog" Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" />
        </Grid>

    </Grid>
</Window>
